<% include header.ejs %>
<div class="jumbotron">
<form role="form" action="/project/new" method="POST">
  <div class="form-group">
    <label for="title">プロジェクト名</label>
    <input type="text" class="form-control" name="title">
  </div>
  <div class="form-group">
    <label for="description">説明</label>
    <textarea class="form-control" name="description" rows="10"></textarea>
    <p class="help-block">ライセンスなどもこちらに入力して下さい。</p>
  </div>
  <div class="form-group">
    <label for="cols">入力項目</label>
    <input name="cols" class="form-control">
    <p class="help-block">何を入力するかを、カンマ(,)で区切って入力して下さい。例:部局,予算,金額</p>
  </div>
  <button type="submit" class="btn btn-default">送信</button>
</form>
</div>
<% include footer.ejs %>
