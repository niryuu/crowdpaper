extend layout
block content
    form.form-signin(role='form', action='/signup', method='POST')
      h2.form-signin-heading ユーザー登録
      input.form-control(type='text', name='username', placeholder='User Name', required='', autofocus='')
      input.form-control(type='password', name='password', placeholder='Password', required='')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') 登録
